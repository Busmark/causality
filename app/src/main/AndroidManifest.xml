<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oscar.gmail.com.causality">
<uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name="oscar.gmail.com.causality.services.NotificationReceiver"
            android:permission="android.permission.BIND_JOB_SERVICE"/>

        <receiver android:name="oscar.gmail.com.causality.services.AlarmReceiver">
            <intent-filter>
                <action android:name="com.test.intent.action.ALARM" />
            </intent-filter>
        </receiver>

        <activity
            android:name="oscar.gmail.com.causality.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="oscar.gmail.com.causality.services.AlarmJobService"
            android:permission="android.permission.BIND_JOB_SERVICE"/>

    </application>

</manifest>